<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jumpingbeanapps.android.hiraganapractice.MainActivity">

    <TextView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="Hiragana Practice"
        android:id="@+id/title"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/quiz"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/study"
            android:text="Study"
            android:layout_toRightOf="@+id/quiz"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/quiz"
            android:id="@+id/draw"
            android:onClick="openDraw"
            android:text="Practice Writing"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/draw"
            android:text="Pronunciation"
            android:layout_below="@+id/study"
            android:id="@+id/pronunciating"/>
    </RelativeLayout>


</RelativeLayout>
