<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:background="#FF33B5E5"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/question_square"
        android:layout_height="@dimen/question_square"
        android:id="@+id/question_being_asked"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/question_margin_top"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choices_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="@dimen/answer_square"
            android:layout_height="@dimen/answer_square"
            android:id="@+id/d"
            android:textSize="@dimen/answer_text_size"
            android:layout_below="@+id/b"
            android:layout_toRightOf="@+id/c"/>

        <Button
            android:layout_width="@dimen/answer_square"
            android:layout_height="@dimen/answer_square"
            android:textSize="@dimen/answer_text_size"
            android:id="@+id/b"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/a"/>

        <Button
            android:layout_width="@dimen/answer_square"
            android:layout_height="@dimen/answer_square"
            android:textSize="@dimen/answer_text_size"
            android:id="@+id/c"
            android:layout_below="@+id/a"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="@dimen/answer_square"
            android:layout_height="@dimen/answer_square"
            android:textSize="@dimen/answer_text_size"
            android:id="@+id/a"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>



</RelativeLayout>